<?xml version="1.0"?>
<sdf version="1.6">
  <model name="sunray_with_2dlidar">
    <include>
      <uri>model://sunray</uri>
    </include>
    <include>
      <uri>model://2D_lidar</uri>
      <pose>0 0 0.28 0 0 0</pose>
    </include>
    <joint name="2Dlidar_joint" type="fixed">
      <child>2D_lidar::laser</child>
      <parent>sunray::base_link</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <upper>0</upper>
          <lower>0</lower>
        </limit>
      </axis>
    </joint>
  </model>
</sdf>
