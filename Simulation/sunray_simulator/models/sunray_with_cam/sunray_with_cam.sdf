<?xml version='1.0'?>
<sdf version='1.6'>
  <model name='sunray_with_cam'>
    <include>
      <uri>model://sunray</uri> <!--uri编写的p250飞机-->
    </include>

    <include>
      <uri>model://camera_front</uri> 
      <pose>0.27 0 0.27 0 0 0</pose>
    </include>

    <include>
      <uri>model://camera_down</uri>
      <pose>0 0 0.02 0 1.5707963 0</pose> <!--位置-->
    </include>

    <!-- 下视相机关节 -->
    <joint name="Monocular_down_joint" type="fixed">
      <child>camera_down::Monocular_down_link</child> <!--子link-->
      <parent>sunray::base_link</parent><!--父link-->
      <axis>
        <xyz>0 0 1</xyz><!--xyz标签定义轴的方向，是单位向量，默认值为0 0 1，参考系一般为joint参考系-->
        <limit>
          <upper>0</upper>
          <lower>0</lower>
        </limit>
      </axis>
    </joint>  

    <!-- 前视相机关节 -->
    <joint name="Monocular_front_joint" type="fixed">
      <child>camera_front::Monocular_front_link</child>
      <parent>sunray::base_link</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <upper>0</upper>
          <lower>0</lower>
        </limit>
      </axis>
    </joint>

  </model>
</sdf>
