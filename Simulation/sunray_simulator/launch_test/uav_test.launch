<launch>
    <!-- world配置，注意选择正确的路径 -->
    <!-- <arg name="world" default="$(find sunray_simulator)/worlds/sunray_empty_world.world"/> -->
    <!-- <arg name="world" default="$(find sunray_simulator)/worlds/land_marker.world"/> -->
    <!-- <arg name="world" default="$(find sunray_simulator)/worlds/single_aruco.world"/> -->
    <arg name="world" default="$(find sunray_simulator)/worlds/cylindrical_forest.world"/>

	<!-- Gazebo 配置 -->
    <arg name="gui" default="true"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
    <arg name="paused" default="false"/>
    <!-- Gazebo sim -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="gui" value="$(arg gui)"/>
        <arg name="world_name" value="$(arg world)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="verbose" value="$(arg verbose)"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="ture"/>
    </include>


    <arg name="vehicle" default="sunray150"/>
    <!-- <arg name="vehicle" default="sunray150_with_mid360"/> -->

    <!-- 启动1号无人机仿真 -->
    <!--无人机编号-->
    <arg name="uav1_id" default="1"/>
    <!-- 无人机初始位置 -->
    <arg name="uav1_init_x" default="0.0"/>
    <arg name="uav1_init_y" default="0.0"/>
    <arg name="uav1_init_yaw" default="0.0"/>
    <group ns="uav$(arg uav1_id)">
        <include file="$(find sunray_simulator)/launch_basic/sunray_sim_base.launch">
            <arg name="uav_id" value="$(arg uav1_id)" />
            <arg name="vehicle" value="$(arg vehicle)" />
            <arg name="uav_init_x" value="$(arg uav1_init_x)"/>
            <arg name="uav_init_y" value="$(arg uav1_init_y)"/>
            <arg name="uav_init_yaw" value="$(arg uav1_init_yaw)"/>
        </include>
    </group>

</launch>
