<launch>
    <arg name="world" default="$(find sunray_simulator)/worlds/sunray_empty_world.world"/>

    <!-- Gazebo 配置 -->
    <arg name="gui" default="true"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
    <arg name="paused" default="false"/>
    <!-- Gazebo sim -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="gui" value="$(arg gui)"/>
        <arg name="world_name" value="$(arg world)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="verbose" value="$(arg verbose)"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="false"/>
    </include>

    <arg name="ugv_id" default="1"/>
    <!-- 无人车的ID -->
    <arg name="ugv_name" default="ugv"/>
    <!-- 无人车的名称 -->
    <arg name="ugv_model" default="wheeltec" />
    <!-- 无人车的模型 -->

    <!-- 无人车的初始位置坐标 -->
    <arg name="init_x" default="0"/>
    <arg name="init_y" default="0"/>
    <arg name="init_z" default="0"/>
    <arg name="init_yaw" default="0"/>

    <!-- 命名空间 -->
    <group ns="$(arg ugv_name)$(arg ugv_id)">
        <!-- 启动文件 -->
        <include file="$(find sunray_simulator)/launch_ugv/sunray_sim_ugv.launch">
            <!-- 传递参数 -->
            <arg name="ugv_id" value="$(arg ugv_id)" />
            <arg name="ugv_model" value="$(arg ugv_model)" />
            <arg name="init_x" value="$(arg init_x)"/>
            <arg name="init_y" value="$(arg init_y)"/>
            <arg name="init_z" value="$(arg init_z)"/>
            <arg name="init_yaw" value="$(arg init_yaw)"/>
        </include>
    </group>

    <!-- RVIZ -->
    <arg name="rviz_enable" default="true"/>
    <arg name="rivz_config" default="$(find sunray_simulator)/launch_ugv/ugv.rviz"/>
    <!-- <group if="$(arg rviz_enable)">
        <node type="rviz" name="rviz_ugv" pkg="rviz" args="-d $(arg rivz_config)"/>
    </group> -->
</launch>

