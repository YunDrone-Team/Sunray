<?xml version="1.0"?>
<launch>

    <arg name="vehicle" default="sunray300"/>
    <arg name="world" default="$(find sunray_simulator)/worlds/sunray_empty_world.world"/>

    <!-- gazebo configs -->
    <arg name="gui" default="true"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
    <arg name="paused" default="false"/>

    <arg name="uav_id" default="1"/>
    <arg name="uav_num" default="8"/>
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>

    <group if="$(eval uav_id == 1)">
        <!-- Gazebo sim -->
        <include file="$(find gazebo_ros)/launch/empty_world.launch">
            <arg name="gui" value="$(arg gui)"/>
            <arg name="world_name" value="$(arg world)"/>
            <arg name="debug" value="$(arg debug)"/>
            <arg name="verbose" value="$(arg verbose)"/>
            <arg name="paused" value="$(arg paused)"/>
            <!-- <arg name="use_sim_time" value="false"/> -->
        </include>
    </group>

    <!-- UAV1 -->
    <group ns="uav$(arg uav_id)">
        <include file="$(find sunray_simulator)/launch_basic/sunray_sim_base.launch">
            <arg name="id" value="$(arg uav_id)" />
            <arg name="x" value="$(arg x)"/>
            <arg name="y" value="$(arg y)"/>
            <arg name="vehicle" value="$(arg vehicle)" />
        </include>
    </group>

    <!-- Recursively generate UAV nodes -->
    <include file="$(find sunray_simulator)/launch_basic/sunray_sim_swarm.launch" if="$(eval (arg('uav_num') > arg('uav_id')))">
        <arg name="uav_id" value="$(eval arg('uav_id') + 1)" />
        <arg name="uav_num" value="$(arg uav_num)" />
        <arg name="x" value="$(arg x)" />
        <arg name="y" value="$(eval arg('y') + 1)" />
        <arg name="vehicle" value="$(arg vehicle)" />
    </include>

</launch>