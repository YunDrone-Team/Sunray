        <param name="input_point_topic" value="/uav2/livox" />
        <param name="output_point_topic" value="/uav2/livox_world" />
        <param name="odom_topic" value="/uav2/sunray/gazebo_pose" />
        <param name="frame_id" value="world" />
        <param name="child_frame_id" value="uav2/livox_laser" />
    </node>

